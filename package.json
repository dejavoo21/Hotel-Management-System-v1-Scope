{
  "name": "hotelos",
  "version": "1.0.0",
  "description": "HotelOS - Modern Hotel Front-Office Management System",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=@hotelos/api",
    "dev:web": "npm run dev --workspace=@hotelos/web",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=@hotelos/api",
    "build:web": "npm run build --workspace=@hotelos/web",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:integration": "npm run test:integration --workspace=@hotelos/api",
    "test:e2e": "npm run test:e2e --workspace=@hotelos/web",
    "test:a11y": "npm run test:a11y --workspace=@hotelos/web",
    "check:a11y": "node scripts/check-a11y.js",
    "lint": "npm run lint --workspaces --if-present",
    "db:migrate": "npm run db:migrate --workspace=@hotelos/api",
    "db:seed": "npm run db:seed --workspace=@hotelos/api",
    "db:studio": "npm run db:studio --workspace=@hotelos/api",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose -f docker-compose.prod.yml build",
    "clean": "rimraf packages/*/dist packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "hotel",
    "management",
    "pms",
    "booking",
    "hospitality"
  ],
  "author": "HotelOS Team",
  "license": "MIT"
}
