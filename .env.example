# ===========================================
# HotelOS Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database
# ===========================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hotelos?schema=public"

# ===========================================
# API Server
# ===========================================
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# ===========================================
# Frontend
# ===========================================
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Stripe (Payment Processing)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# Redis (Optional - for session/cache)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug

# ===========================================
# Email (SMTP + IMAP)
# ===========================================
SMTP_HOST=mail.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=onboarding@example.com
SMTP_PASS=change-me
SMTP_TLS_REJECT_UNAUTHORIZED=true

IMAP_HOST=mail.example.com
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=onboarding@example.com
IMAP_PASS=change-me
IMAP_MAILBOX=INBOX
IMAP_POLL_INTERVAL_MS=30000

# ===========================================
# Attachment malware scanning (ClamAV)
# ===========================================
CLAMAV_ENABLED=false
CLAMAV_PATH=clamscan
CLAMAV_TIMEOUT_MS=15000
CLAMAV_MAX_BYTES=10485760
