# ===========================================
# HotelOS Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database
# ===========================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hotelos?schema=public"

# ===========================================
# API Server
# ===========================================
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# ===========================================
# Frontend
# ===========================================
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Stripe (Payment Processing)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# Email (API)
# ===========================================
RESEND_API_KEY=re_your_resend_api_key
BREVO_API_KEY=xkeysib-...
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=LaFlo

# ===========================================
# Twilio (SMS + In-App Voice)
# ===========================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_PHONE=+15551234567
TWILIO_VOICE_API_KEY_SID=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_VOICE_API_KEY_SECRET=your_twilio_voice_api_key_secret
TWILIO_VOICE_TWIML_APP_SID=APxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_VOICE_FROM_PHONE=+15551234567

# ===========================================
# Redis (Optional - for session/cache)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug

# ===========================================
# Email (SMTP + IMAP)
# ===========================================
SMTP_HOST=mail.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=onboarding@example.com
SMTP_PASS=change-me
SMTP_TLS_REJECT_UNAUTHORIZED=true

IMAP_HOST=mail.example.com
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=onboarding@example.com
IMAP_PASS=change-me
IMAP_MAILBOX=INBOX
IMAP_POLL_INTERVAL_MS=30000

# ===========================================
# SLA Escalation Job
# ===========================================
# Secret for authenticating cron job requests
SLA_JOB_SECRET=your-secure-random-secret-change-in-production

# ===========================================
# Attachment malware scanning (ClamAV)
# ===========================================
CLAMAV_ENABLED=false
CLAMAV_PATH=clamscan
CLAMAV_TIMEOUT_MS=15000
CLAMAV_MAX_BYTES=10485760
